{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Local gigantic.json",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "client",
        "-p",
        "./fixtures/gigantic.json",
        "-c",
        "${workspaceFolder}/tempcache"
      ]
    },

    {
      "name": "Run pkgjson-small.json",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "buildFlags": "-tags=dev",
      "program": "${workspaceFolder}",
      "args": [
        "client",
        "-p",
        "./fixtures/pkgjson-small.json",
        "-c",
        "${workspaceFolder}/caches/pkgjson-small",
        "--install",
        "--resolve",
        "--nuke"
      ]
    },
    {
      "name": "Run server",
      "type": "go",
      "buildFlags": "-tags=dev",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": ["serve"]
    },
    {
      "name": "Run react.json",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "client",
        "-p",
        "./fixtures/react.json",
        "-c",
        "${workspaceFolder}/caches/react",
        "--install=true",
        "--resolve=true"
      ]
    },
    {
      "name": "Launch Package",
      "type": "go",
      "request": "attach",
      "showLog": true
    }
  ]
}
