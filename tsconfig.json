{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "baseUrl": ".",
    "downlevelIteration": true,
    "checkJs": false,
    "paths": {
      // "generated": ["./generated"],
      // "inferno": ["/node_modules/react"],
      // "ecs": ["./ecs/src"],
      // "client": ["./client"],
      // "launcher": ["./launcher"],
      // "lib": ["./lib"],
      // "server": ["./server"],
      // "ui": ["./ui"]
      "assert": ["assert/"],
      "buffer": ["buffer/"],
      "console": ["console-browserify"],
      "constants": ["constants-browserify"],
      "crypto": ["crypto-browserify"],
      "domain": ["domain-browser"],
      "events": ["events/"],
      "http": ["stream-http"],
      "https": ["https-browserify"],
      "os": ["os-browserify/browser.js"],
      "path": ["node_modules/path-browserify"],
      "punycode": ["punycode/"],
      "querystring": ["querystring-es3/"],
      "stream": ["stream-browserify"],
      "_stream_duplex": ["readable-stream/duplex.js"],
      "_stream_passthrough": ["readable-stream/passthrough.js"],
      "_stream_readable": ["readable-stream/readable.js"],
      "_stream_transform": ["readable-stream/transform.js"],
      "_stream_writable": ["readable-stream/writable.js"],
      "string_decoder": ["string_decoder/"],
      "sys": ["util/util.js"],
      "timers": ["timers-browserify"],
      "tty": ["tty-browserify"],
      "url": ["url/"],
      "util": ["util/util.js"],
      "vm": ["vm-browserify"],
      "zlib": ["browserify-zlib"]
    },
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "typeRoots": ["./types", "./node_modules/@types"],

    "module": "esnext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution": "Node"
  },
  "typeAcquisition": {
    "include": ["jest"]
  },
  "exclude": ["node_modules"]
}
